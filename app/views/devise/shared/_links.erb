<%- if controller_name != 'sessions' %>
  <%= link_to "Anmelden", new_session_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Registrieren", new_user_registration_path %><br />
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Passwort vergessen?", new_user_password_path %><br />
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Keine Bestätigungsmail erhalten?", new_user_confirmation_path %><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Keine Mail zum Passwort zurücksetzen erhalten?", new_unlock_path %><br />
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Mit #{provider.to_s.titleize} anmelden", omniauth_authorize_path(resource_name, provider) %><br />
  <% end -%>
<% end -%>
